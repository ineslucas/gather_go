<div class="container-main mx-auto" style="height: 812px; width: 375px;">
    <div class="text-center">
    <div class="text-center" style="padding-top:10px">
        <h2 class="Title"><strong> <%= @party.name %></strong></h2>
    </div>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel" data-bs-interval="1000">
    <%# the interval above is the speed (1000=1 second) %>
        <div class="carousel-inner">
            <%# --------------------------PLAYLIST SECTION-------------------------- %>
            <div class="carousel-item active">
                <div class="container rounded-5">
                    <div class="card mx-auto rounded-4 border-0 shadow-lg mt-5 mb-5" style="width: 327px;">
                        <div class="card-body" style="height:685px">
                            <div class="card-body-info" style="padding-top:10px">
                                <h4 class="card-title mt-3 mb-4">Playlist ü•≥ </h4>
                                <p class="card-subtitle mb-4 text-muted"></p>
                            </div>
                            <div style="mt-3; height:500px"> <%= @party.playlist.html_safe %> </div>
                            <%# <div id="embed-iframe" style="mt-3; height:352px; background-color:rgb(24,56,112)"> %>
                        </div>
                    </div>
                </div>
            </div>
            <%# --------------------------MAIN (DISH) SECTION-------------------------- %>
            <div class="carousel-item">
                <div class="container rounded-5">
                    <div class="card mx-auto rounded-4 border-0 shadow-lg mt-5 mb-5" style="width: 327px;">
                        <div class="card-body" style="height:685px">
                            <div class="card-body-info">
                                <h2 class="card-title mt-2 mb-4">Main üåÆ üåØ </h2>

                                <% if @party.edibles.any? %>
                                  <% @party.edibles.where(category: :main).each do |edible| %>
                                    <h5 class="card-subtitle text-muted"><%= edible.name %></h5>
                                    <h6>About this main dish...</h6>
                                    <p><%= edible.description %></p>
                                    <h6>Ingredients</h6>
                                    <p><%= edible.ingredients %></p>
                                    <h6>Recipe</h6>
                                    <p><%= edible.instructions %></p>
                                  <% end %>
                                <% else %>
                                  <p>No party mains available yet.</p>
                                <% end %>

                            </div>
                            <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" class="card-img-top mt-3 rounded-4 shadow" style="height: 353px;"> %>
                        </div>
                    </div>
                </div>
            </div>
            <%# --------------------------COCKTAIL SECTION-------------------------- %>
            <div class="carousel-item">
                <div class="container rounded-5">
                    <div class="card mx-auto rounded-4 border-0 shadow-lg mt-5 mb-5" style="width: 327px;">
                        <div class="card-body" style="height:685px">
                            <h4 class="card-title mt-2 mb-4">Cocktails üç∏</h4>
                            <%# Maria added this code over the weekend, not sure if it works as intended%>
                            <div class="card-body-info">

                              <% if @party.edibles.where(category: :cocktail).any? %>
                                <% @party.edibles.where(category: :cocktail).each do |edible| %>
                                  <h5 class="card-subtitle text-muted"><%= edible.name %></h5>
                                  <h6>About this cocktail...</h6>
                                  <p><%= edible.description %></p>
                                  <h6>Ingredients</h6>
                                  <p><%= edible.ingredients %></p>
                                  <h6>Recipe</h6>
                                  <p><%= edible.instructions %></p>
                                <% end %>
                              <% else %>
                                <p>There are no cocktails associated with this party.</p>
                              <% end %>

                            </div>
                            <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" class="card-img-top mt-3 rounded-4 shadow" style="height: 353px;"> %>
                        </div>
                    </div>
                </div>
            </div>
            <%# --------------------------MOCKTAIL SECTION-------------------------- %>
            <div class="carousel-item">
                <div class="container rounded-5">
                    <div class="card mx-auto rounded-4 border-0 shadow-lg mt-5 mb-5" style="width: 327px;">
                        <div class="card-body" style="height:685px">
                            <h4 class="card-title mt-2 mb-4">Mocktails üßÉ</h4>
                            <%# Maria added this code over the weekend, not sure if it works as intended%>
                            <div class="card-body-info">

                              <% if @party.edibles.where(category: :mocktail).any? %>
                                <% @party.edibles.where(category: :mocktail).each do |edible| %>
                                  <h5 class="card-subtitle text-muted"><%= edible.name %></h5>
                                  <h6>About this mocktail...</h6>
                                  <p><%= edible.description %></p>
                                  <h6>Ingredients</h6>
                                  <p><%= edible.ingredients %></p>
                                  <h6>Recipe</h6>
                                  <p><%= edible.instructions %></p>
                                <% end %>
                              <% else %>
                                <p>There are no mocktails associated with this party.</p>
                              <% end %>

                            </div>
                            <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" class="card-img-top mt-3 rounded-4 shadow" style="height: 353px;"> %>
                        </div>
                    </div>
                </div>
            </div>
            <%# --------------------------GAMES SECTION-------------------------- %>
            <div class="carousel-item">
                <div class="container rounded-5">
                    <div class="card mx-auto rounded-4 border-0 shadow-lg mt-5 mb-5" style="width: 327px;">
                        <div class="card-body" style="height:685px">
                            <h4 class="card-title mt-2 mb-4">Game üç∫</h4>
                            <%# Maria added this code over the weekend, not sure if it works as intended%>
                            <div class="card-body-info">
                              <% @party.games.each do |game| %>
                                <h5 class="card-subtitle text-muted"><%= game.name %></h5>
                                <h6>What's this game about?</h6>
                                <p><%= game.description %></p>
                                <h6>Materials</h6>
                                <p><%= game.materials %></p>
                                <h6>How is it played?</h6>
                                <p><%= game.instructions %></p>
                              <% end %>
                            </div>
                            <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" class="card-img-top mt-3 rounded-4 shadow" style="height: 353px;"> %>
                        </div>
                    </div>
                </div>
            </div>
            <%# --------------------------PINTEREST SECTION-------------------------- %>
            <div class="carousel-item">
                <div class="container rounded-5">
                    <div class="card mx-auto rounded-4 border-0 shadow-lg mt-5 mb-5" style="width: 327px;">
                        <div class="card-body" style="height:685px">
                            <div class="card-body-info">
                                <h2 class="card-title mt-2 mb-4">Mood Board</h2>
                                <ul style="list-style-type: none; color:#6C757D ">
                                  <%= @party.pinterest.html_safe %>
                                </ul>
                            </div>
                            <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" class="card-img-top mt-3 rounded-4 shadow" style="height: 353px;"> %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>

    </div>

    <script async defer src="//assets.pinterest.com/js/pinit.js"></script>

